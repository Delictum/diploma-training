						<td align="center"><strong>Departure date</strong></td>
						<td align="center"><strong>Departure time</strong></td>
						<td align="center"><strong>Ticket price</strong></td>
						<td align="center"><strong>Number free places</strong></td>
					</tr>

					<xsl:for-each select="documnets/buses/bus">
