						<td><xsl:value-of select="way"/></td>
						<td><xsl:value-of select="stop"/></td>
						<td><xsl:value-of select="departure_date"/></td>
						<td><xsl:value-of select="departure_time"/></td>
						<td><xsl:value-of select="ticket_price"/></td>
