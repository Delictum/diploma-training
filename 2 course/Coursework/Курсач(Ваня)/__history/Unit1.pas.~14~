{$R *.dfm}

procedure TForm1.ComboBox1Change(Sender: TObject);
begin
case combobox1.ItemIndex of
0: begin
  ClientDataSet1.Active := false;
         SQLQuery1.Close;
          SQLQuery1.SQL.Clear;
          SQLQuery1.SQL.Add(' SELECT soderz2 FROM `glavi` ');
          SQLQuery1.Open;
          ClientDataSet1.Active := true;

end;
1: begin
    ClientDataSet1.Active := false;
         SQLQuery1.Close;
          SQLQuery1.SQL.Clear;
          SQLQuery1.SQL.Add(' SELECT soderz2 FROM glavi where id=2 ');
          SQLQuery1.Open;
          ClientDataSet1.Active := true;
end;
   2: begin
        ClientDataSet1.Active := false;
         SQLQuery1.Close;
          SQLQuery1.SQL.Clear;
          SQLQuery1.SQL.Add(' SELECT soderz2 FROM glavi where id=3  ');
          SQLQuery1.Open;
          ClientDataSet1.Active := true;
   end;
   3: begin
   combobox2.Enabled:=true;
     ClientDataSet2.Active := false;
         SQLQuery2.Close;
          SQLQuery2.SQL.Clear;
          SQLQuery2.SQL.Add(' SELECT задача FROM `kursach`.`задания`   ');
          SQLQuery2.Open;
          ClientDataSet2.Active := true;
   end;
end;
end;

